            idx: 0,
            dir: 'asc'
        },
        language: {
            url: 'https://cdn.datatables.net/plug-ins/2.0.7/i18n/{{ lang }}.json',
        },

    }).then(function(dt) {

        // dt contains the initialized instance of DataTables
        dt.on('draw', function() {
            //alert('Redrawing table');
        })
        
    });

});
