{% extends 'admin/base.html.twig' %}

{% block body_content %}

    <div class="card">

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                    <tbody>
                        <tr>
                            <th>{{ 'label.id'|trans({}, 'project')|lower }}</th>
                            <td>{{ project_api.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.name'|trans({}, 'project')|lower }}</th>
                            <td>{{ project_api.name }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.api_key'|trans({}, 'project')|lower }}</th>
                            <td>{{ project_api.apiKey }}</td>
                        </tr>
                    </tbody>

                </table>

            </div>

        </div>

    </div>

    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_admin_project_api_edit', {'id': project_api.id}) }}" title="{{ 'action.edit_project_api'|trans({}, 'project') }}" class="btn btn-success">{{ 'action.edit_project_api'|trans({}, 'project') }}</a>
            <a href="{{ path('app_admin_project_api_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-info">{{ 'action.back_to_list'|trans }}</a>
        </div>
        <div>
            {{ include('admin/project_api/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
