{% extends 'admin/base.html.twig' %}

{% block body_content %}

    <div class="card">

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                    <tbody>
                        <tr>
                            <th>{{ 'label.id'|trans({}, 'project')|lower }}</th>
                            <td>{{ project_contact.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.pi_name'|trans({}, 'project')|lower }}</th>
                            <td>{{ project_contact.piName }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.pi_phone'|trans({}, 'project')|lower }}</th>
                            <td>{{ project_contact.piPhone }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.pi_mobile'|trans({}, 'project')|lower }}</th>
                            <td>{{ project_contact.piMobile }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.pi_fax'|trans({}, 'project')|lower }}</th>
                            <td>{{ project_contact.piFax }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.pi_email'|trans({}, 'project')|lower }}</th>
                            <td>{{ project_contact.piEmail }}</td>
                        </tr>
                    </tbody>

                </table>

            </div>

        </div>

    </div>

    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_admin_project_contact_edit', {'id': project_contact.id}) }}" title="{{ 'action.edit_project_contact'|trans({}, 'project') }}" class="btn btn-success">{{ 'action.edit_project_contact'|trans({}, 'project') }}</a>
            <a href="{{ path('app_admin_project_contact_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-info">{{ 'action.back_to_list'|trans }}</a>
        </div>
        <div>
            {{ include('admin/project_contact/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
