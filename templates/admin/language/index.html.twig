{% extends 'admin/base.html.twig' %}

{% block body_content %}
{{ dump(projectService) }}

    {% if projectService is not null %}
        {% set firstText = projectService.projectProjectTexts|first %}
        {% if firstText %}
            {{ firstText.name }}
        {% else %}
            {# Alternativní obsah, pokud není žádný ProjectText dostupný #}
            no name
        {% endif %}
    {% endif %}

    <div class="card">

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                    <thead>
                        <tr>
                            <th scope="col" class="text-center">{{ 'label.id'|trans|lower }}</th>
                            <th scope="col">{{ 'label.name'|trans|lower }}</th>
                            <th scope="col" class="text-center">{{ 'label.publication'|trans|lower }}</th>
                            <th scope="col" class="text-center">{{ 'label.actions'|trans|lower }}</th>
                        </tr>
                    </thead>

                    <tbody>
                    {% for language in languages %}

                        <tr>
                            <td class="text-center">{{ language.id }}</td>
                            <td>
                                {{ language.name }}
                                 {% set key = 'language.' ~ language.translate %}
                                 {% if translation_key_exists(key, 'language') %}
                                    
                                {% else %}
                                    <br><small class="text-danger">Překladový klíč nenalezen!</small>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                {% set publication = language.publication %}
                                {% if publication == '' %}
                                    {{ 'publication.select'|trans|lower }}
                                {% endif %}
                                {% if publication == 0 %}
                                    <span class="badge bg-danger">{{ 'publication.unpublish'|trans|lower }}</span>
                                {% endif %}
                                {% if publication == 1 %}
                                    <span class="badge bg-success">{{ 'publication.publish'|trans|lower }}</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <a href="{{ path('app_admin_language_show', {'id': language.id}) }}" title="{{ 'action.show'|trans|lower }}"><i class="ri-eye-fill"></i></a>
                                <a href="{{ path('app_admin_language_edit', {'id': language.id}) }}" title="{{ 'action.edit'|trans|lower }}"><i class="ri-edit-fill"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">{{ 'message.no_records_found'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>

                </table>

            </div>

        </div>
        
    </div>

    <a href="{{ path('app_admin_language_new') }}" title="{{ 'action.create_new_language'|trans }}" class="btn btn-success">{{ 'action.create_new_language'|trans }}</a>
    
{% endblock %}
