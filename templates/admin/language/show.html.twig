{% extends 'admin/base.html.twig' %}

{% block body_content %}

    <div class="card">

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                    <tbody>
                        <tr>
                            <th>{{ 'label.id'|trans|lower }}</th>
                            <td>{{ language.id }}</td>
                        </tr>
                        <tr>
                           <th>{{ 'label.name'|trans|lower }}</th>
                            <td>{{ language.name }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.url_alias'|trans|lower }}</th>
                            <td>{{ language.urlAlias }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.locale'|trans|lower }}</th>
                            <td>{{ language.locale }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.translate'|trans|lower }}</th>
                            {% set key = 'language.' ~ language.translate %}
                            <td>
                                {{ language.translate }}
                                {% if translation_key_exists(key, 'language') %}
                                    (<span class="text-success">Překladový klíč nalezen</span>)
                                {% else %}
                                    (<span class="text-danger">Překladový klíč nenalezen!</span>)
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>{{ 'label.publication'|trans|lower }}</th>
                            <td>
                                {% set publication = language.publication %}
                                {% if publication == '' %}
                                    {{ 'publication.select'|trans|lower }}
                                {% endif %}
                                {% if publication == 0 %}
                                    <span class="badge bg-danger">{{ 'publication.unpublish'|trans|lower }}</span>
                                {% endif %}
                                {% if publication == 1 %}
                                    <span class="badge bg-success">{{ 'publication.publish'|trans|lower }}</span>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>

                </table>

            </div>

        </div>

    </div>

    <div class="d-flex justify-content-between">
        <div>
            <a href="{{ path('app_admin_language_edit', {'id': language.id}) }}" title="{{ 'action.edit_language'|trans }}" class="btn btn-success">{{ 'action.edit_language'|trans }}</a>
            <a href="{{ path('app_admin_language_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-info">{{ 'action.back_to_list'|trans }}</a>
        </div>
        <div>
            {{ include('admin/language/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
