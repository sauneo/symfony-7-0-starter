{% extends 'admin/base.html.twig' %}

{% block body_content %}

<div class="card">

    <div class="card-body">

        <div class="table-responsive">

            <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                <tbody>
                    <tr>
                        <th>{{ 'label.id'|trans({}, 'language')|lower }}</th>
                        <td>{{ language.id }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.name'|trans({}, 'language')|lower }}</th>
                        <td>{{ language.name }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.url_alias'|trans({}, 'language')|lower }}</th>
                        <td>{{ language.urlAlias }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.locale'|trans({}, 'language')|lower }}</th>
                        <td>{{ language.locale }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.translate'|trans({}, 'language')|lower }}</th>
                        <td>{{ language.translate }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.publication'|trans|lower }}</th>
                        <td>
                            {% set publication = language.publication %}
                            {% if publication == '' %}
                            {{ 'publication.select'|trans|lower }}
                            {% endif %}
                            {% if publication == 0 %}
                            <span class="badge bg-danger">{{ 'publication.unpublish'|trans|lower }}</span>
                            {% endif %}
                            {% if publication == 1 %}
                            <span class="badge bg-success">{{ 'publication.publish'|trans|lower }}</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>

            </table>

        </div>

    </div>

</div>

<div class="d-flex justify-content-between">
    <div>
        <a href="{{ path('app_admin_language_edit', {'id': language.id}) }}" title="{{ 'action.edit_language'|trans({}, 'language') }}" class="btn btn-success">{{ 'action.edit_language'|trans({}, 'language') }}</a>
        <a href="{{ path('app_admin_language_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-info">{{ 'action.back_to_list'|trans }}</a>
    </div>
    <div>
        {{ include('admin/language/_delete_form.html.twig') }}
    </div>
</div>

{% endblock %}
