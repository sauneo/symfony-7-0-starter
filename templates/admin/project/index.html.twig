{% extends 'admin/base.html.twig' %}

{% block body_content %}

    <div class="card">

        <div class="card-body">

            <div class="table-responsive">

                <table class="table table-striped table-hover table-nowrap align-middle mb-0">

                    <thead>
                        <tr>
                            <th scope="col" class="text-center">{{ 'label.id'|trans({}, 'project')|lower }}</th>
                            <th scope="col">{{ 'label.ci_name'|trans({}, 'project')|lower }}</th>
                            <th scope="col" class="text-center">{{ 'label.publication'|trans|lower }}</th>
                            <th scope="col" class="text-center">{{ 'label.actions'|trans|lower }}</th>
                        </tr>
                    </thead>

                    <tbody>
                    {% for project in projects %}
                        <tr>
                            <td class="text-center">{{ project.id }}</td>
                            <td>{{ project.ciName }}</td>
                            <td class="text-center">
                                {% set publication = project.publication %}
                                {% if publication == '' %}
                                    {{ 'publication.select'|trans|lower }}
                                {% endif %}
                                {% if publication == 0 %}
                                    <span class="badge bg-danger">{{ 'publication.unpublish'|trans|lower }}</span>
                                {% endif %}
                                {% if publication == 1 %}
                                    <span class="badge bg-success">{{ 'publication.publish'|trans|lower }}</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <a href="{{ path('app_admin_project_show', {'id': project.id}) }}" title="{{ 'action.show'|trans|lower }}"><i class="ri-eye-fill"></i></a>
                                <a href="{{ path('app_admin_project_edit', {'id': project.id}) }}" title="{{ 'action.edit'|trans|lower }}"><i class="ri-edit-fill"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="42">{{ 'message.no_records_found'|trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>

                </table>

            </div>

        </div>
        
    </div>

    <a href="{{ path('app_admin_project_new') }}" title="{{ 'action.create_new_project'|trans({}, 'project') }}" class="btn btn-success">{{ 'action.create_new_project'|trans({}, 'project') }}</a>
    
{% endblock %}
