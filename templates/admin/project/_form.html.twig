            <div class="col-4 d-flex align-items-center">
                <div class="form-check form-switch form-switch-lg" dir="ltr">
                    {{ form_widget(form.ciVatPayer, {}) }}
                </div>
            </div>

            <div class="col-12">
				{{ form_row(form.ciRegistered) }}
			</div>

        </div>

    </div>

</div>

