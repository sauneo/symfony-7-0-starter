		<h4 class="card-title mb-0 flex-grow-1">{{ 'fieldset.company_information'|trans([], 'project') }}</h4>
	</div>

    <div class="card-body">

        <div class="row">

            <div class="col-12">
				{{ form_row(form.ciName) }}
